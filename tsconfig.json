{
  "compilerOptions": {
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "outDir": "./bin",
    "target": "es2021",
    "lib": ["es2022"],
    "jsx": "react-jsx",
    "module": "es2022",
    "moduleResolution": "node",
    "types": [
      "node"
    ],
    "resolveJsonModule": true,
    "allowJs": true,
    "checkJs": false,
    "isolatedModules": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "rootDir": "."
  },
  "include": [ "src/**/*.ts", "scripts/**/*.ts" ],
  "exclude": ["node_modules", "build", "dist", "test"]
}
